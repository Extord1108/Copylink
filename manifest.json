{
  "manifest_version": 3,
  "name": "copylink",
  "version": "1.0.0",
  "description": "Copy the link of the page by different format.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/main.js"]
    }
  ],
  "permissions": ["contextMenus", "clipboardWrite"],
  "background": {
    "service_worker": "src/background.js"
  }
}
